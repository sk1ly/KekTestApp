<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BAC6CA"
    android:layout_centerHorizontal="true"
    tools:context="ru.sk1ly.firstapp.WorkWithDisplayActivity">

<!--TODO Отцентровать по горизонтали-->

    <TextView
        android:id="@+id/current_brightness_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/brightness_seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/go_to_system_display_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickGoToSystemDisplaySettingsButton"
        android:text="@string/go_to_system_display_settings_button_text" />

</LinearLayout>