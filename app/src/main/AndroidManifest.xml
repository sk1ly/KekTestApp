<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.sk1ly.firstapp">

    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_first_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round_first_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AuthorizeActivity"
            android:label="@string/activity_authorize_label" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/activity_about_label"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".WorkWithDisplayActivity"
            android:label="@string/activity_work_with_display_label" />
        <activity
            android:name=".BeerInfoActivity"
            android:label="@string/activity_beer_info_label" />
        <activity
            android:name=".StopwatchActivity"
            android:label="@string/activity_stopwatch_label" />
    </application>

</manifest>