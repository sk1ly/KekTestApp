<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.sk1ly.firstapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ru.sk1ly.firstapp.MainActivity"
            android:label="@string/activity_main_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.sk1ly.firstapp.AuthorizeActivity"
            android:label="@string/activity_authorize_label" />
        <activity
            android:name="ru.sk1ly.firstapp.AboutActivity"
            android:label="@string/activity_about_label"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name="ru.sk1ly.firstapp.WorkWithDisplayActivity"
            android:label="@string/activity_work_with_display_label" />
    </application>

    <uses-permission android:name="android.permission.WRITE_SETTINGS" tools:ignore="ProtectedPermissions"/>

</manifest>